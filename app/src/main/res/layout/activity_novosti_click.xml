<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".NovostiClickActivity">

    <TextView
        android:id="@+id/naslov_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neki dugacki naslov"
        android:textColor="#000"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/slika_click"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/nogomet7"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/datum_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="dfsgsdfgsd"/>
    <TextView
        android:id="@+id/tekst_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Neki dugacak tekst"/>
</LinearLayout>
</ScrollView>